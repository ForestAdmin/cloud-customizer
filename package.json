{
  "name": "cloud-customizer",
  "version": "1.0.0",
  "main": "dist/index.js",
  "engines": {
    "node": "18.x.x"
  },
  "entryPoints": [
    "dist/index.js"
  ],
  "scripts": {
    "update-typings": "cloud-toolkit update-typings",
