{
  "name": "cloud-customizer",
  "version": "1.0.0",
  "main": "dist/index.js",
  "engines": {
    "node": "18.x.x"
  },
  "entryPoints": [
    "dist/index.js"
  ],
  "scripts": {
    "build": "npm-run-all build:node forestadmin:update-typings",
    "build:node": "node esbuild.mjs",
    "build:watch": "nodemon --watch './src' -e ts,js esbuild.mjs",
    "forestadmin:login": "cloud-toolkit login",
    "forestadmin:update-typings": "cloud-toolkit update-typings",
    "forestadmin:package": "cloud-toolkit package",
    "forestadmin:publish": "cloud-toolkit publish",
    "forestadmin:build:package:publish": "npm-run-all forestadmin:build forestadmin:package forestadmin:publish"
  },
  "devDependencies": {
    "@forestadmin/cloud-toolkit": "^1.0.0-beta-cloud-toolkit.6",
    "@types/node": "^20.10.6",
    "dotenv": "^16.3.1",
    "esbuild": "^0.20.0",
    "nodemon": "^3.0.3",
    "npm-run-all2": "^6.1.2",
    "typescript": "^5.3.2"
  }
}
